<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:paddingBottom="24dp"
    android:paddingHorizontal="24dp"
    android:orientation="vertical"
    tools:context=".RankingActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="환경러너들의 순위"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_semibold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rankbox"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="1. _"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/first_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="(0점)"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:background="@drawable/bg_rankbox"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/second_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="2. _"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/second_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="(0점)"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rankbox"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/third_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="3. _"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/third_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="(0점)"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:background="@drawable/bg_rankbox"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/forth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="4. _"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/forth_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="(0점)"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rankbox"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fifth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="5. _"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/fifth_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="(0점)"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_input"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/my_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="내 점수: 0점"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="(_)"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="다음으로"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_semibold"
        android:background="@drawable/bg_notknow" />
</LinearLayout>